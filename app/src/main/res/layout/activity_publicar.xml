<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publicar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.german.appfirebase.PublicarActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="PUBLICAR PRODUCTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/com_facebook_button_send_background_color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtProductoname"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="Nombre del producto*" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/txtProductoname"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:id="@+id/txtPreciop"
            android:hint="Precio ($)*" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="19dp"
            android:id="@+id/txtNumbercontac"
            android:layout_below="@+id/txtPreciop"
            android:layout_alignParentStart="true"
            android:hint="Numero de celular*" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:id="@+id/txtNumberFijo"
            android:hint="Telefono fijo (opcional)"
            android:layout_below="@+id/txtNumbercontac"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Publicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Publicar"
            android:id="@+id/btnPublicarr"
            android:textColor="?attr/colorPrimaryDark" />

    </LinearLayout>
</RelativeLayout>
